@model FundacionDonandoParaAyudar.Web.Models.EditUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

@{
    ViewData["Title"] = "Edit";
}

    <div class="container mt-4 text-center">
        <a asp-action="Index" asp-controller="Home">
            <img class="img-responsive" src="~/images/fdpaLogin.png" alt="Editar perfil"
                 width="100" height="100" />
        </a>
        <h2>Edita tu perfil</h2>
        <h4 class="text-primary">Usuario: </h4> <h4>@User.Identity.Name</h4>
        <hr />
    </div>


<div class="container mt-2">
    <div class="row">
        <div class="col-md-4 offset-md-3">
            <form asp-action="ChangeUser" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PicturePath" />

                <partial name="_User" />

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="ChangePassword" class="btn btn-warning">Cambiar clave</a>
                </div>
            </form>
        </div>
        <div class="col-md-4 offset-md-auto">
            @if (!string.IsNullOrEmpty(Model.PicturePath))
            {
                <img src="@Url.Content(Model.PicturePath)" alt="Image" class="img-responsive" width="300" height="300"/>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


