@model FundacionDonandoParaAyudar.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}


<div class="container text-center mt-4" style="font-style:italic, oblique; font-family:Harabara;">
        <img src="~/images/Fundacion/FDPATransparente.png" alt="Editar"
             width="150" 
             height="150"
             class="img-responsive mt-4"/>
    <h1>Cambia tu clave</h1>
</div>
<hr />
<div class="container" style="font-style:italic, oblique; font-family:Harabara;">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="Token" />

                <div class="form-group">
                    <label asp-for="UserName">Email</label>
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">@@</span>
                        <input asp-for="UserName" type="text" class="form-control" aria-describedby="basic-addon1" />
                        <span asp-validation-for="UserName" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Nueva clave</label>
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">%</span>
                        <input asp-for="Password" type="password" class="form-control" aria-describedby="basic-addon1" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Confirmar clave</label>
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">%</span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" aria-describedby="basic-addon1" />
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cambiar" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-success alert-success">
                <p>
                    @ViewBag.Message
                    <a class="btn btn-link" asp-action="Login" asp-controller="Account">
                        Regresar
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
